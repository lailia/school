package chap12.sec5;

public class BytesToStringExam1 {

	public static void main(String[] args) {
		//문자열을 byte 배열로 변환시키고 다시 문자열로 복원
		String data = "자바";
		
		byte[] arr1 = data.getBytes();
		
		for(int i = 0; i < arr1.length; i++) {
			System.out.println("arr1." + i + " : " + arr1[i]);
		}

	}

}
