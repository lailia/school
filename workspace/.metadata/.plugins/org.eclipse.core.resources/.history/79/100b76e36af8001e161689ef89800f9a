package chap04.sec8;

public class ForExam3 {

	public static void main(String[] args) {
		
		for(int i = 1; i <= 5; i++) {
			for(int j = 0; j < i; j++) {
				System.out.print("* ");
			}
			System.out.println();
		}

		int x = 3;
		int y = 3;
		
		for(int i = 0; i <= 5; i++) {
			for(int j = 0; j <= 5; j++) {
				if((x <= j) && (y >= j)) {
					System.out.print("* ");
				}
				else
					System.out.println("  ");
			}
			x--;
			y++;
			System.out.println();
		}
		
	}

}
