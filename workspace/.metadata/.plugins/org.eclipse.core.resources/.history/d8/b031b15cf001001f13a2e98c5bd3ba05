package chap12.sec3.exam5;

public class InExam1 {

	public static void main(String[] args) throws Exception{
		int speed = 0;
		int KeyCode = 0;
		
		while(true) {
			//Enter 키를 입력하지 않았을 경우에만 실행함
			if(KeyCode != 13 && KeyCode != 10) {
				//유니코드 13과 10은 엔터임
				if(KeyCode == 49) {	//유니코드 49는 숫자 1을 의미함
					speed++;
				}
				else if(KeyCode == 50) {
					speed--;
				}
			}
		}

	}

}
