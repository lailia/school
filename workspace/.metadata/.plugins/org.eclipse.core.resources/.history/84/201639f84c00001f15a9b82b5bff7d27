package chap09.sec02.exam2;

public class A {
	//인스턴스 멤버 클래스 B
	class B{
		//인스턴스 필드
		int field1 = 1;
		//정적 필드(java 17부터 허용)
		static int field2 = 2;
		
		B(){
			System.out.println("인스턴스 멤버 클래스 B-생성자 실행");
		}
		
		//인스턴스 메소드
		void method1() {
			System.out.println("B-method1() 실행");
		}

	}

}
